<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.ddit.mapper.UsersMapper">
	
	<!-- 
	email로 사용자 정보를 가져옴
	public UsersVO findByEmail(String email)
	 -->
	<select id="findByEmail" parameterType="String" resultType="kr.or.ddit.vo.UsersVO">
		SELECT ID, EMAIL, PASSWORD, CREATED_AT, UPDATED_AT
		FROM   USERS
		WHERE  EMAIL = #{email}
	</select>
	
	<!-- 
	email과 password를 입력받아 회원 가입 처리(id는 기본키로써 자동생성)
	public Long save(UsersVO usersVO)
	 -->
	<insert id="save" parameterType="kr.or.ddit.vo.UsersVO">
		<selectKey resultType="int" order="BEFORE" keyProperty="id">
			SELECT NVL(MAX(ID),0)+1 FROM USERS
		</selectKey>
	
		INSERT INTO USERS(ID, EMAIL, PASSWORD, CREATED_AT, UPDATED_AT)
		VALUES(#{id}, #{email}, #{password}, #{createdAt}, #{updatedAt})
	</insert>
	
</mapper>



